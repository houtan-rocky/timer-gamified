{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Timer Gamified",
  "CN": "Houtan Rocky",
  "version": "0.1.0",
  "identifier": "com.base.TimerGamified",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "timer-gamified",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msix"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "msix": {
      "identity": {
        "name": "com.base.TimerGamified",
        "publisher": "CN=YourPublisherName",
        "displayName": "Timer Gamified",
        "version": "0.1.0"
      },
      "publisherDisplayName": "Your Publisher Display Name",
      "description": "A powerful, feature-rich productivity timer application that transforms your work sessions into an engaging, gamified experience.",
      "appxManifest": {
        "displayName": "Timer Gamified",
        "publisherDisplayName": "Your Publisher Display Name",
        "description": "A powerful, feature-rich productivity timer application that transforms your work sessions into an engaging, gamified experience.",
        "backgroundColor": "#0f0f0f",
        "startupTask": {
          "enabled": true,
          "taskType": "default"
        }
      },
      "dependencies": [],
      "capabilities": {
        "internetClient": false,
        "privateNetworkClientServer": false
      }
    }
  }
}
